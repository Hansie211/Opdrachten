<Window x:Class="Toren_van_Hanoi.HighscoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Toren_van_Hanoi"
        mc:Ignorable="d"
        Title="Highscore" Height="124.177" Width="336.329" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid FocusManager.FocusedElement="{x:Reference edtName}" >
        <Label Content="Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="edtName" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" KeyDown="edtName_KeyDown"/>
        <Label x:Name="lblScore" Content="Score:" HorizontalAlignment="Left" Margin="195,10,0,0" VerticalAlignment="Top" Width="125"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="195,49,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
