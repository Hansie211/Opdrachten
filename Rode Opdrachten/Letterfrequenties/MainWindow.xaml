<Window x:Class="Letterfrequenties.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Letterfrequenties"
        mc:Ignorable="d"
        Title="" Height="517" Width="454" Background="#FF130F40" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="btnOpenFile" Content="Selecteer een bestand" Height="45" Margin="25,25,25,0" VerticalAlignment="Top" Click="BtnOpenFile_Click" FontSize="24" FontWeight="Bold" Background="#FF4834D4" BorderBrush="{x:Null}" Foreground="White"/>
        <ListBox x:Name="listBox" Margin="25,90,25,20" FontFamily="Courier New" FontSize="16" Background="#FF686DE0" BorderBrush="{x:Null}" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
