<Window x:Class="GroeneOpdrachten.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroeneOpdrachten"
        mc:Ignorable="d" Height="191" Width="263" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight" >
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="195*"/>
                <ColumnDefinition Width="62*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="label" Content="Kies een opdracht:" Margin="10,10,10,104" FontSize="24" FontWeight="Bold" Grid.ColumnSpan="2"/>
            <ComboBox x:Name="boxOpdracht" Margin="10,58,10,0" VerticalAlignment="Top" IsReadOnly="True" SelectedIndex="0" Grid.ColumnSpan="2">
            </ComboBox>
            <Button x:Name="button" Content="Open" Margin="10,93,10,10" Background="#FF23DA1A" BorderBrush="{x:Null}" Foreground="White" FontSize="24" FontWeight="Bold" Click="Button_Click" Grid.ColumnSpan="2"/>
        </Grid>

    </Grid>
</Window>
